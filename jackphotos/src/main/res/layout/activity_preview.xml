<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:ysn="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ysn.com.jackphotos.widget.component.PreviewViewPager
        android:id="@+id/preview_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/jack_preview_bg" />

    <ysn.com.jackphotos.widget.component.TitleBarView
        android:id="@+id/preview_activity_title_bar_view"
        android:layout_width="wrap_content"
        ysn:tbv_icon="@drawable/jack_ic_back"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/preview_activity_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jack_bottom_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/jack_bottom_bar"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/preview_activity_select_tag"
            android:layout_width="@dimen/jack_preview_select_tag_size"
            android:layout_height="@dimen/jack_preview_select_tag_size"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/preview_activity_select"
            android:background="@drawable/jack_ic_un_selected_tag" />

        <TextView
            android:id="@+id/preview_activity_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="@dimen/jack_small_space"
            android:paddingEnd="@dimen/jack_space"
            android:text="@string/jack_photo_text_select"
            android:textColor="@color/jack_primary_text"
            android:textSize="@dimen/jack_primary_text" />
    </RelativeLayout>
</RelativeLayout>
