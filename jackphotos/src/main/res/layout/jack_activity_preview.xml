<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ysn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ysn.com.jackphotos.widget.component.PreviewViewPager
        android:id="@+id/jack_preview_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/jack_preview_bg" />

    <ysn.com.jackphotos.widget.component.TitleBarView
        android:id="@+id/jack_preview_activity_title_bar_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ysn:tbv_icon="@drawable/jack_ic_back" />

    <LinearLayout
        android:id="@+id/jack_preview_activity_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/jack_preview_bottom_bar"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/jack_preview_activity_preview_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <View
            android:id="@+id/jack_preview_activity_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/jack_preview_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/jack_bottom_bar">

            <ImageView
                android:id="@+id/jack_preview_activity_select_tag"
                android:layout_width="@dimen/jack_preview_select_tag_size"
                android:layout_height="@dimen/jack_preview_select_tag_size"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/jack_preview_activity_select"
                android:background="@drawable/jack_ic_un_selected_tag" />

            <TextView
                android:id="@+id/jack_preview_activity_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:paddingStart="@dimen/jack_small_space"
                android:paddingEnd="@dimen/jack_space"
                android:text="@string/jack_photo_text_select"
                android:textColor="@color/jack_primary_text"
                android:textSize="@dimen/jack_primary_text" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
