<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ysn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jack_photos_activity_photo_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/jack_photos_activity_bottom_bar"
        android:layout_below="@+id/jack_photos_activity_title_bar_view"
        android:background="@color/jack_photo_list_bg"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/jack_photos_activity_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/jack_photos_activity_photo_recycler_view"
        android:background="#9e111212"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/jack_primary_text"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/jack_photos_activity_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jack_bottom_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/jack_bottom_bar">

        <TextView
            android:id="@+id/jack_photos_activity_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/jack_small_space"
            android:paddingEnd="@dimen/jack_space"
            android:text="@string/jack_photo_text_preview"
            android:textColor="@drawable/jack_text_selector_preview"
            android:textSize="@dimen/jack_primary_text" />
    </RelativeLayout>

    <View
        android:id="@+id/jack_photos_activity_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/jack_photos_activity_title_bar_view"
        android:background="#c4111212"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jack_photos_activity_folder_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jack_photos_activity_title_bar_view"
        android:layout_marginBottom="100dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="vertical" />

    <ysn.com.jackphotos.widget.component.TitleBarView
        android:id="@+id/jack_photos_activity_title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ysn:tbv_special="true" />
</RelativeLayout>
