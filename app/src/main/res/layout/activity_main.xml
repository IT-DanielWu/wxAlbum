<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_activity_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择(9张)" />

        <Button
            android:id="@+id/main_activity_single_and_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单选(剪裁)" />

        <Button
            android:id="@+id/main_activity_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照" />

        <Button
            android:id="@+id/main_activity_camera_and_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照(剪裁)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_activity_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="含视频" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_activity_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>
